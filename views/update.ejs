<%- include("partials/header") %>

<div class="container-fluid">
    <div class="px-4 py-5 my-5">
        <h1>Update</h1>
        <p>
            <!-- Here I render the input we want to update: -->
            Entry: "<%= contents[0].content %>"
        </p>

        <!-- Here I pass the contentId to the POST route in app.js: -->
        <form action="/execute-update/<%= contentId %>" method="POST">
            <input type="text" name="updatedContent">
            <button type="submit">Update</button>
        </form>
    </div>
</div>

